{
  "name": "bbcat-orchestration-builder-electron-app",
  "version": "0.10.5",
  "description": "Electron desktop application for generating orchestrated audio applications.",
  "main": "bin/main.js",
  "repository": "https://github.com/bbc/bbcat-orchestration-builder",
  "author": "Kristian Hentschel <Kristian.Hentschel@bbc.co.uk>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "bbcat-orchestration-builder-background-tasks": "^0.10.5",
    "bbcat-orchestration-builder-logging": "^0.10.5",
    "bbcat-orchestration-builder-react-frontend": "^0.10.5",
    "body-parser": "^1.18.3",
    "electron-devtools-installer": "^2.2.4",
    "electron-store": "^3.0.0",
    "express": "^4.16.4",
    "fs-extra": "^7.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "concurrently": "^4.1.0",
    "electron": "^6.0.8",
    "electron-builder": "^21.2.0"
  },
  "scripts": {
    "build": "yarn build-frontend && yarn build-background-tasks && yarn build-main && electron-builder --dir",
    "dist": "yarn build && electron-builder --mac dmg",
    "build-frontend": "(cd ../react-frontend/ && yarn run webpack --mode production)",
    "build-main": "yarn clean && mkdir ./bin/ && babel src -s -d bin",
    "build-background-tasks": "(cd ../background-tasks/ && yarn build)",
    "clean": "rm -rf ./dist/ ./bin/",
    "dev": "concurrently \"(cd ../react-frontend && yarn dev)\" \"(yarn build-background-tasks && yarn build-main && NODE_ENV=development electron .)\""
  },
  "build": {
    "appId": "uk.co.bbc.rd.bbcat-orchestration-builder",
    "files": [
      "./bin/**/*"
    ],
    "asar": {
      "smartUnpack": false
    },
    "asarUnpack": [
      "**/node_modules/@bbc/bbcat-orchestration-template/**/*"
    ],
    "mac": {
      "files": [
        "!**/ffprobe-static/bin/win32/**/*",
        "!**/ffprobe-static/bin/linux/**/*",
        "!**/ffprobe-static/bin/linux/**/*",
        "!**/ffmpeg-static/bin/win32/**/*",
        "!**/ffmpeg-static/bin/linux/**/*",
        "!**/ffmpeg-static/bin/linux/**/*"
      ]
    }
  }
}