{
  "name": "bbcat-orchestration-builder-electron-app",
  "version": "0.0.1",
  "description": "Electron desktop application for generating orchestrated audio applications.",
  "main": "dist/main.js",
  "repository": "https://github.com/bbc/bbcat-orchestration-builder",
  "author": "Kristian Hentschel <Kristian.Hentschel@bbc.co.uk>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "bbcat-orchestration-builder-analyse-server": "^0.0.1",
    "bbcat-orchestration-builder-react-frontend": "^0.0.1",
    "electron": "^4.1.1",
    "electron-store": "^3.0.0",
    "express": "^4.16.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "electron-packager": "^13.1.1"
  },
  "scripts": {
    "build": "yarn build-frontend && yarn build-main && electron-packager . --overwrite",
    "build-frontend": "(cd node_modules/bbcat-orchestration-builder-react-frontend/ && yarn run webpack --mode production)",
    "build-main": "yarn clean && mkdir ./dist/ && babel src -s -d dist",
    "clean": "rm -rf ./dist/",
    "dev": "yarn build-main && NODE_ENV=development electron ."
  }
}
